# -----------------------------
# Overlay .env example (local)
# -----------------------------

# Database credentials for Postgres container
DB_USER=postgres
DB_PASSWORD=postgres

# Spring application DB connection (container reaches service overlay-db)
DATABASE_URL=jdbc:postgresql://overlay-db:5432/overlay
DATABASE_USER=${DB_USER}
DATABASE_PASSWORD=${DB_PASSWORD}

# Overlay admin password for toggling overlays per tournament
OVERLAY_ADMIN_PASSWORD=change-me

# S3 (Yandex Object Storage)
S3_KEY_ID=your-key-id
S3_SECRET_ACCESS_KEY=your-secret
S3_REGION=ru-central1
S3_ENDPOINT=https://storage.yandexcloud.net
S3_BUCKET_NAME=mafoverlay-photos

# App feature flags
APP_POLEMICA_ENABLE=true
APP_CRAWL_SCHEDULER_ENABLE=true
APP_CRAWL_SCHEDULER_INTERVAL=10s

# Spring
SPRING_PROFILES_ACTIVE=prod